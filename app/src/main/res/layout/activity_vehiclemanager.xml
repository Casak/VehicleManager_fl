<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_custom_progress"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                 android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/topLayout"
                >
                <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edit_white"
                android:hint="Vehicle Id"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:inputType="number"
                android:id="@+id/vehicle_id_edit"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/btn_ocr"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="OCR"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edit_white_border_1"
                    android:layout_marginTop ="8dp"
                    android:layout_marginBottom ="2dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/btn_ocr"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topLayout"
                android:background="@drawable/bg_edit_white_border"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="40dp"
                android:id="@+id/region_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OIL"
                            android:textColor="#aaa"/>
                        <EditText
                            android:layout_width="50dp"
                            android:maxLength="3"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_white"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:inputType="number"
                			android:hint="0"
                            android:id="@+id/oil_edit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MILEAGE"
                            android:textColor="#aaa"/>
                        <EditText
                            android:layout_width="100dp"
                            android:maxLength="7"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_white"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:inputType="number"
                            android:hint="0"
                            android:id="@+id/mileage_edit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COOLANT"
                            android:textColor="#aaaaaa"/>
                        <EditText
                            android:layout_width="50dp"
                            android:padding="5dp"
                            android:maxLength="3"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_white"
                            android:id="@+id/coolant_edit"
                            android:inputType="number"
                			android:hint="0"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEF"
                            android:textColor="#aaaaaa"/>
                        <EditText
                            android:layout_width="50dp"
                            android:padding="5dp"
                            android:maxLength="3"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_white"
                            android:layout_marginLeft="5dp"
                            android:inputType="number"
                			android:hint="0"
                            android:id="@+id/def_edit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="         FUEL"
                            android:textColor="#aaaaaa"/>
                        <EditText
                            android:layout_width="50dp"
                            android:padding="5dp"
                            android:maxLength="3"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_white"
                            android:layout_marginLeft="5dp"
                            android:inputType="number"
                			android:hint="0"
                            android:id="@+id/fuel_edit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/region_layout"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:id="@+id/number_layout">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="1"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num1"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="2"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num2"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="3"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num3"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="4"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num4"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="5"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/from_6_to_delete_layout">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="6"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num6"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="7"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num7"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="8"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num8"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="9"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num9"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/num0"
                        />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_edit_round_border_clickable"
                        android:text="â†"
                        android:textSize="30sp"
                        android:textColor="#ffffffff"
                        android:layout_margin="5dp"
                        android:id="@+id/delete"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_white_border_1"
                android:layout_below="@+id/number_layout"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:id="@+id/defects_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defects Report"
                    android:textColor="#ffffffff"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=">"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ffffffff"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_white_border_2"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_white_border_1"
                android:layout_below="@+id/defects_layout"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:id="@+id/next_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="#ffffffff"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=">"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ffffffff"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_white_border_2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>